{
  "manifest_version": 3,
  "name": "Escudo Digital",
  "version": "1.0.0",
  "description": "Proteção inteligente contra conteúdo Red Pill e misógino para crianças e adolescentes",
  
  "permissions": [
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content/content-youtube.js"],
      "css": ["content/styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["data/keywords.json", "data/channels.json"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Escudo Digital"
  }
}